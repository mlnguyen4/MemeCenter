<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamsylvanmatthew.memecenter.Fragments.LoadingFragment">

    <!-- PUT UR STUFF HERE -->

    <include layout="@layout/item_notification" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Welcome to Meme Center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Featured Channels" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/homeFeaturedStreamsRecyclerView"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Games" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/homeTopGamesRecyclerView"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Most Popular Channels" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/homeTopStreamsRecyclerView"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>